.wrap {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #fff;

}

.form_group {
  width: 100%;
  height: 40px;
  margin-top: 30px;
}

.input_txt {
  width: 70%;
  height: 38px;
  padding: 0px;
  float: left;
  border: 1px solid #41a1cb;
  outline: none;
  text-indent: 10px;
}

.input_sub {
  width: auto;
  height: 40px;
  border: 0px;
  float: left;
  background-color: #41a1cb;
  color: #fff;
  font-size: 16px;
  outline: none;
  cursor: pointer;
  position: relative;
}

.seven-days {
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  font-size: 35rpx;
  background: rgba(242, 238, 238, 0.4);
  height: 500rpx;
  bottom: 20px;
  
}
.seven-title {
  width: 100%;
  padding: 12rpx 0 18rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #b5b5b5;
  text-align: center;
}
.seven-list {
  width: 100%;  
  white-space: nowrap; 
  justify-content: flex-start;
  align-items: center;
  text-align: center;
  padding-right: 12px;
}
.seven-item {
  height: 400rpx;
  width: 30%;
  display: inline-block; 
  justify-content: space-around;
  align-items: center;
  text-align: center;
  line-height: 30px;
  
}
.img1{
  height: 15px;
  width: 15px;
}
.text3{
  font-size: 12px;
}
.name {
  
  color: #000;
}
.name text {
  width: 30%;
  font-size: 60rpx;
}

.time {
  font-size: 11px;
  color: #000;
  float: left;
}

.temperature {
  text-align: center;
  color: #000;
  font-size: 130rpx;
  margin-top: 30rpx;
}
.weather-description {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.img2{
width: 40px;
height: 40px;
}
.img3{
  width: 14px;
  height: 18px;

}

.scroll-box{
  width: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
}

/* 搜索框 */
.search{
  position: fixed;
  top:20rpx;
  left: 50rpx;
  z-index: 1000;
}
.search-box{
  width: 100%;
  display: flex;
  padding-left: 20rpx;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #fff;
  padding-bottom: 8rpx;
}

.defaultText{
  font-size: 24rpx;
  width: 400rpx;
  color: #fff;
  width: 100%;
}
.search-input{
  width: 500rpx;
  margin-left: 16rpx;
  font-size: 28rpx;
}
.todaytext{
   font-size: 16px;
   font-weight: bold;
}