
.total{
    display: flex;flex-direction: column;
    width: 100%;height: 340rpx;
    background: lightblue;
    color: white;
}

.total .total-money{
    width: 100%;height:100rpx;
    font-size: 50rpx;text-align: center;line-height: 100rpx;
}
.total .total-word{
    width: 100%;height:40rpx;
    font-size: 30rpx;text-align: center;line-height: 40rpx;
}

.total .total-list{
    width: 100%;height: 200rpx;
    display: flex;flex-direction: row;justify-content: space-between;
    
}
.total .total-list .shuxian{
    width: 2px;   
    background: white;
    height: 140rpx;
    margin-top: 25rpx;
}
.total .total-list .total-out{
    flex-basis: 50%;
    display: flex;flex-direction: column;
}
.total .total-list .total-out .total-out-money{
    width: 100%；height：100rpx;
    font-size: 40rpx;line-height: 100rpx;
    text-align: center;
    padding-top: 10rpx;
}
.total .total-list .total-out .total-out-number{
    width: 100%；height：100rpx;
    font-size: 30rpx;
    text-align: center;
}

.total .total-list .total-in{
    flex-basis: 50%;
    display: flex;flex-direction: column;
}
.total .total-list .total-in .total-in-money{
    width: 100%；height：100rpx;
    font-size: 40rpx;line-height: 100rpx;
    text-align: center;
    padding-top: 10rpx;
}
.total .total-list .total-in .total-in-number{
    width: 100%；height：100rpx;
    font-size: 30rpx;
    text-align: center;
}



.add{
    width: 100%;
    color: white;text-align: center;
    background: lightblue;
    padding: 20rpx 0;
    background: lightgreen;
    position: relative;

}
.add .image{
    position: absolute;
    width: 50px;
    height: 50px;
   
}


.show{
    width: 100%;
    
}
.show span{
    display: block;
    width: 100%;
    text-align: center;
    font-size: 35rpx;
    padding:20rpx 0;
    margin:100rpx auto;
    color: #bbb;

}
.list-container{
    width: 100%;
}
.list{
    
    width: 100%;height: 70rpx;
    border-bottom: 1px solid #ccc;
    display: flex;flex-direction: row;justify-content: space-between;
    padding: 20rpx 0;
    position: relative;
    z-index: 998; 
    background: antiquewhite;
}
.colorRed{
    color: red;
}
.colorGreen{
    color: limegreen;
}
.list .list-people{
    font-size: 13px;
    font-weight: bold;
    line-height: 70rpx;
    width: 60px;
    padding-left: 10px;
}
.list .list-info{
    font-size: 12px;
    line-height: 70rpx;
    color: #999;
    flex-grow: 1;
    padding-left: 20px;
    
}
.list .list-money-date{
    display: flex;flex-direction: column;
    font-size: 12px;
    height: 70rpx;
    width: 80px;
    text-align: right;
    padding-right: 50px;
    
}
.delete{
    height: 110rpx;width: 40px;
    line-height: 110rpx;
    font-size: 12px;
    text-align: center;
    background: #ccc;
    color: orangered;
    position: absolute;top: 0;right: 0;
}
.delete-text{
    border: 2px solid #bbb;
    padding: 10px 5px;
    border-radius: 50px;
    background: white;
    
}