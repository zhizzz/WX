/**index.wxss**/
.page-body-wrapper {
  height: 100%;
  width: 100%;
}

.bg-img{
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 1;
}
.btn-area{
  position: absolute;
  left:50%;
  top:60%;
  transform: translate(-50%,-50%);
  z-index: 5;
}
.btn{
  border-bottom: 3rpx solid #b17a7e;
  padding: 0 10rpx;
  font-size: 40rpx;
  border-radius: 10rpx;
  z-index: 5;
}
.btn:active{
  background-color: #ccc;
  z-index: 5;
}
.btn2,.btn3{
  margin-top:40rpx; 
  z-index: 5;
}
.icon1{
  background-size: cover;
  display: inline-block;
  width: 120rpx;
  height: 100rpx;
  vertical-align: bottom;
  margin-bottom: 5rpx;
  z-index: 5;
}
.text{
  padding-left: 20rpx;
  z-index: 5;
}

.lunbo image{
  width: 100%;
  height: 100%;
}
.one{
  position: absolute;
  z-index: 2;
  height:100%;
  width: 100%;
}